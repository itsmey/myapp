<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <g:HTMLPanel>
        <header>
            <h2>MyApp home page</h2>
            <g:Button ui:field="logoutButton">Sign Out</g:Button>
            <br></br>
            <br></br>
        </header>
        <body>
            <g:TextBox ui:field="freshTitle"/> Title
            <br></br>
            <g:TextBox ui:field="freshAuthor"/> Author
            <br></br>
            <g:TextBox ui:field="freshDescription"/> Description
            <br></br>
            <g:Button ui:field="createDoc">Create document</g:Button>
            <br></br>
            <g:HTML ui:field="docsActionError"/>
            <br></br>
            <h3>Documents directory</h3>
            <g:Button ui:field="deleteDoc">Delete document</g:Button>
            <br></br>
            <br></br>
            <table>
                <g:ScrollPanel width="100%" height ="300px">
                    <c:CellTable ui:field="docsTable"/>
                </g:ScrollPanel>
            </table>
        </body>
    </g:HTMLPanel>
</ui:UiBinder>